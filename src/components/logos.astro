---
// @ts-ignore
import { Icon } from "astro-icon";

const icons = [
  "simple-icons:react",
  "simple-icons:tailwindcss",
  "simple-icons:javascript",
  "simple-icons:astro",
  "simple-icons:wordpress",
  "simple-icons:nextdotjs",
]

const iconSize = "h-8 md:h-12";

---

<div class="mt-24">
  <h2 class="text-center text-slate-500">Works with your technologies</h2>
  <div class="flex gap-8 md:gap-20 items-center justify-center mt-10 flex-wrap">
    {
      icons.map((icon) => {
        return (
          <Icon class={iconSize} name={icon} />
        )
      })
    }
  </div>
</div>
